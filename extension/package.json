{
  "name": "vs-pkterminal",
  "displayName": "VS_pkterminal",
  "description": "Open terminals in editor tabs with LLM launchers, a status bar shortcut, and split actions.",
   "version": "1.0.21",
  "publisher": "Cmondary",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/mondary/VS_pkterminal"
  },
  "engines": { "vscode": "^1.85.0" },
  "categories": ["Other"],
  "keywords": ["terminal", "llm", "ai", "editor", "tab", "split", "codex", "claude", "gemini", "opencode"],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:openTerminalEditor.openInEditorTab",
    "onCommand:openTerminalEditor.openCodex",
    "onCommand:openTerminalEditor.openGemini",
    "onCommand:openTerminalEditor.openOpenCode",
    "onCommand:openTerminalEditor.openOpenSpec",
    "onCommand:openTerminalEditor.openQwen",
    "onCommand:openTerminalEditor.openClaude",
    "onCommand:openTerminalEditor.statusBarButton",
    "onCommand:openTerminalEditor.splitLeft",
    "onCommand:openTerminalEditor.splitRight",
    "onCommand:openTerminalEditor.splitUp",
    "onCommand:openTerminalEditor.splitDown",
    "onView:openTerminalEditor.llmPanelView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openTerminalEditor.llmActivity",
          "title": "LLMs",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "openTerminalEditor.llmActivity": [
        {
          "id": "openTerminalEditor.llmPanelView",
          "name": "LLM Launcher",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "openTerminalEditor.openInEditorTab",
        "title": "Open Terminal in New Editor Tab",
        "icon": "$(terminal)"
      },
      {
        "command": "openTerminalEditor.openCodex",
        "title": "Open Codex Terminal in New Editor Tab",
        "icon": "resources/codex.svg"
      },
      {
        "command": "openTerminalEditor.openGemini",
        "title": "Open Gemini Terminal in New Editor Tab",
        "icon": "resources/gemini.svg"
      },
      {
        "command": "openTerminalEditor.openOpenCode",
        "title": "Open OpenCode Terminal in New Editor Tab",
        "icon": "resources/opencode.svg"
      },
      {
        "command": "openTerminalEditor.openOpenSpec",
        "title": "Open OpenSpec Terminal in New Editor Tab",
        "icon": "resources/openspec.svg"
      },
      {
        "command": "openTerminalEditor.openQwen",
        "title": "Open Qwen Terminal in New Editor Tab",
        "icon": "resources/qwen.svg"
      },
      {
        "command": "openTerminalEditor.openClaude",
        "title": "Open Claude Terminal in New Editor Tab",
        "icon": "resources/claude.svg"
      },
      {
        "command": "openTerminalEditor.statusBarButton",
        "title": "Open Terminal (Status Bar)"
      },
      {
        "command": "openTerminalEditor.splitLeft",
        "title": "Split Terminal Left",
        "icon": "$(arrow-left)"
      },
      {
        "command": "openTerminalEditor.splitRight",
        "title": "Split Terminal Right",
        "icon": "$(arrow-right)"
      },
      {
        "command": "openTerminalEditor.splitUp",
        "title": "Split Terminal Up",
        "icon": "$(arrow-up)"
      },
      {
        "command": "openTerminalEditor.splitDown",
        "title": "Split Terminal Down",
        "icon": "$(arrow-down)"
      }
    ],
    "menus": {
      "terminal/context": [
        {
          "command": "openTerminalEditor.splitLeft",
          "when": "openTerminalEditor.terminalEditorActive == true",
          "group": "navigation@90"
        },
        {
          "command": "openTerminalEditor.splitRight",
          "when": "openTerminalEditor.terminalEditorActive == true",
          "group": "navigation@91"
        },
        {
          "command": "openTerminalEditor.splitUp",
          "when": "openTerminalEditor.terminalEditorActive == true",
          "group": "navigation@92"
        },
        {
          "command": "openTerminalEditor.splitDown",
          "when": "openTerminalEditor.terminalEditorActive == true",
          "group": "navigation@93"
        }
      ],
      "editor/title/context": [
        {
          "command": "openTerminalEditor.splitLeft",
          "when": "openTerminalEditor.terminalEditorActive == true",
          "group": "navigation@90"
        },
        {
          "command": "openTerminalEditor.splitRight",
          "when": "openTerminalEditor.terminalEditorActive == true",
          "group": "navigation@91"
        },
        {
          "command": "openTerminalEditor.splitUp",
          "when": "openTerminalEditor.terminalEditorActive == true",
          "group": "navigation@92"
        },
        {
          "command": "openTerminalEditor.splitDown",
          "when": "openTerminalEditor.terminalEditorActive == true",
          "group": "navigation@93"
        }
      ],
      "editor/title": [
        {
          "command": "openTerminalEditor.openCodex",
          "when": "openTerminalEditor.showCodex == true",
          "group": "navigation@-6"
        },
        {
          "command": "openTerminalEditor.openGemini",
          "when": "openTerminalEditor.showGemini == true",
          "group": "navigation@-5"
        },
        {
          "command": "openTerminalEditor.openOpenCode",
          "when": "openTerminalEditor.showOpenCode == true",
          "group": "navigation@-4"
        },
        {
          "command": "openTerminalEditor.openOpenSpec",
          "when": "openTerminalEditor.showOpenSpec == true",
          "group": "navigation@-3"
        },
        {
          "command": "openTerminalEditor.openQwen",
          "when": "openTerminalEditor.showQwen == true",
          "group": "navigation@-2"
        },
        {
          "command": "openTerminalEditor.openClaude",
          "when": "openTerminalEditor.showClaude == true",
          "group": "navigation@-1"
        },
        {
          "command": "openTerminalEditor.openInEditorTab",
          "when": "true",
          "group": "navigation@0"
        }
      ]
    },
    "configuration": {
      "title": "Open Terminal in Editor Tab",
      "properties": {
        "openTerminalEditor.showCodex": {
          "type": "boolean",
          "default": true,
          "description": "Show the Codex button in the editor title bar."
        },
        "openTerminalEditor.showGemini": {
          "type": "boolean",
          "default": true,
          "description": "Show the Gemini button in the editor title bar."
        },
        "openTerminalEditor.showOpenCode": {
          "type": "boolean",
          "default": true,
          "description": "Show the OpenCode button in the editor title bar."
        },
        "openTerminalEditor.showOpenSpec": {
          "type": "boolean",
          "default": true,
          "description": "Show the OpenSpec button in the editor title bar."
        },
        "openTerminalEditor.showQwen": {
          "type": "boolean",
          "default": true,
          "description": "Show the Qwen button in the editor title bar."
        },
        "openTerminalEditor.showClaude": {
          "type": "boolean",
          "default": true,
          "description": "Show the Claude button in the editor title bar."
        },
        "openTerminalEditor.customLaunchers": {
          "type": "array",
          "default": [],
          "description": "Custom LLM launchers (name, command, icon).",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "command": { "type": "string" },
              "icon": { "type": "string" }
            }
          }
        },
        "openTerminalEditor.launchDelayMs": {
          "type": "number",
          "default": 0,
          "description": "Delay (ms) before auto-running launcher command after opening the terminal."
        },
        "openTerminalEditor.launchDelaySeconds": {
          "type": "number",
          "default": 5,
          "description": "Delay (seconds) before auto-running launcher command after opening the terminal. Takes priority over launchDelayMs."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "package": "mkdir -p ../release && vsce package -o ../release/VS_pkterminal-${npm_package_version}.vsix",
    "release": "npm run build && npm run package"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.5.4"
  }
}
